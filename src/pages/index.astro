---
import "../styles/global.css";
import Skill from "../components/card/Skill.astro";
import Portfolio from "../components/card/Porfolio.astro";
import Experience from "../components/card/Experience.astro";

import { skills } from "../constants/skills";
import { tools } from "../constants/tools";
import { portfolio } from "../constants/portfolio";
import { experience } from "../constants/experience";
import ContactMe from "../components/card/ContactMe.astro";
import Thanks from "../components/card/Thanks.astro";
import Github from "../components/icons/github.astro";
import Gitlab from "../components/icons/gitlab.astro";
import Linkedin from "../components/icons/linkedin.astro";
import Email from "../components/icons/email.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/merlo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Rodolfo Merlo - Software Architect | Golang, Vue3, TypeScript</title>
    <meta name="author" content="Rodolfo Merlo Ali" />
    <meta
      name="keywords"
      content="software architect, golang developer, vue3, typescript, backend engineer, remote work"
    />
    <meta
      name="description"
      content="Software Architect specializing in scalable backend systems. Golang, Vue3, TypeScript. Open to remote opportunities worldwide."
    />
  </head>
  <body>
    <main>
      <header class="main-header">
        <a href="/blog" class="btn">Blog</a>

        <div class="dropdown">
          <button class="btn dropdown-btn"> My Tools ‚ñæ </button>
          <div class="dropdown-content">
            <a
              href="https://imagex.merloali.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="dropdown-item"
            >
              <span class="tool-icon">üñºÔ∏è</span>
              <div class="tool-info">
                <span class="tool-name">ImageX</span>
                <span class="tool-desc">Image processing tool</span>
              </div>
            </a>
          </div>
        </div>
      </header>
      <section class="hero">
        <article>
          <h1>I'm <strong>Rodolfo Merlo Ali</strong></h1>
          <h2>
            I focus on building scalable backend systems and integration
            platforms
          </h2>
        </article>
      </section>
      <section class="contact">
        <a href="mailto:rodolfo@merloali.com" aria-label="Email" class="btn">
          Contact Me
        </a>
        <aside class="hero-social">
          <a
            href="https://github.com/malisoft"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"><Github /></a
          >
          <a
            href="https://gitlab.com/malisoftbo"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitLab"><Gitlab /></a
          >
          <a
            href="https://www.linkedin.com/in/rodolfo-merlo-ali"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"><Linkedin /></a
          >
          <a href="mailto:rodolfo@merloali.com" aria-label="Email"><Email /></a>
        </aside>
      </section>

      <article>
        <h2>About</h2>
        <p lang="en">
          Software Architect & Technical Lead with <strong
            >3 years of professional experience</strong
          > designing and building scalable backend systems. Specialized in <strong
            >Golang, Vue 3, TypeScript, PostgreSQL, and Docker</strong
          >, with a focus on microservices architecture, secure authentication
          (OAuth 2.0), and event-driven systems.
          <p></p>
          <p>
            Passionate about <strong
              >system architecture, team leadership, and mentoring developers</strong
            >. Currently seeking new opportunities in innovative tech companies
            where I can contribute to building robust, scalable solutions.
            Interested in <strong
              >entrepreneurship and technology research</strong
            >.
          </p>
        </p>
      </article>
      <article>
        <h2>My Skills</h2>
        <section class="skills">
          {skills.map((skill) => <Skill {...skill} />)}
        </section>
        <h2>My Tools</h2>
        <section class="skills">
          {tools.map((tool) => <Skill {...tool} />)}
        </section>
        <p class="dotfiles">
          <a href="https://gitlab.com/malisoftbo/dotfiles" target="_blank">
            Go to my dotfiles
          </a>
        </p>
      </article>
      <article>
        <h2>Portfolio</h2>
        <section class="portfolio">
          {portfolio.map((portfolio) => <Portfolio {...portfolio} />)}
        </section>
      </article>
      <article>
        <h2>Experience</h2>
        <section class="experience">
          {experience.map((experience) => <Experience {...experience} />)}
        </section>
      </article>
      <ContactMe />
      <footer>
        <Thanks />
      </footer>
    </main>
  </body>

  <style>
    .hero-badges {
      display: flex;
      justify-content: center;
      margin: 15px 0;
      gap: 10px;
      flex-wrap: wrap;
    }

    .badge-open {
      display: inline-block;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease;

      &:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
      }
    }

    .hero-location {
      text-align: center;
      font-size: 0.95rem;
      color: #e5e7eb;
      margin: 10px 0;
      padding: 8px;
      background-color: rgba(61, 63, 67, 0.5);
      border-radius: 8px;
      display: inline-block;
      width: 100%;
    }
    .hero {
      display: flex;
      margin: auto;
      justify-content: center; /* Centered since no image */
      align-items: center;
      min-height: 200px;
      gap: 2rem;
      font-family:
        Inter,
        -apple-system,
        BlinkMacSystemFont,
        Segoe UI,
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        Fira Sans,
        Droid Sans,
        Helvetica Neue,
        sans-serif;
    }

    .hero article {
      display: flex;
      flex-direction: column;
      align-items: flex-start; /* Align left */
      width: 100%;
    }

    .contact {
      display: flex;
      align-items: center;
      margin-left: 10px;
    }

    .hero-social {
      display: flex;
      gap: 1.5rem;
      align-items: center;
      margin-left: 1rem;
    }

    .hero-social a {
      color: #fff;
      transition:
        transform 0.2s,
        color 0.2s;
    }

    .hero-social a:hover {
      transform: scale(1.1);
      color: var(--primary-color);
    }

    .main-header {
      position: absolute;
      top: 1rem;
      right: 1rem;
      z-index: 10;
    }

    .btn {
      display: inline-block;
      padding: 0.5rem 1.5rem;
      border: 1px solid var(--primary-color);
      border-radius: 0.5rem;
      color: var(--primary-color);
      text-decoration: none;
      font-weight: 600;
      transition: all 0.2s ease-in-out;
      text-color: var(--primary-color);
    }

    .btn:hover {
      background-color: var(--primary-color);
      color: var(--color-background);
    }

    .hero-social svg {
      width: 2rem;
      height: 2rem;
    }

    .hero h1 {
      font-size: 2rem;
      font-weight: 400;
      margin: 0;
      line-height: normal;
    }

    .hero h1 strong {
      font-weight: 700;
      font-size: 3rem;
      color: var(--primary-color);
      display: block;
    }

    .hero h2 {
      font-size: 1.2rem;
      font-weight: 500;
      margin: 10px 0;
      color: #fff;
      line-height: 1.5;
    }

    /* Existing styles */
    .dotfiles {
      text-align: center;
      transition: scale 0.3s linear;
      &:hover {
        scale: 1.1;
      }
      > a {
        display: inline-block;
        background-color: var(--secondary-color);
        border-radius: 1rem;
        padding: 10px;
        margin: 10px;
        outline: 1px solid var(--primary-color);
        color: var(--primary-color);
      }
    }
    footer {
      width: 100%;
      text-align: center;
      font-size: 0.8rem;
      color: var(--primary-color);
    }
    /* Dropdown Styles */
    .main-header {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-btn {
      cursor: pointer;
      display: flex;
      background-color: var(--main-color);
      align-items: center;
      gap: 0.5rem;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      right: 0;
      top: 100%;
      margin-top: 10px;
      background-color: rgba(61, 63, 67, 0.95);
      backdrop-filter: blur(10px);
      min-width: 220px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
      border-radius: 0.8rem;
      padding: 0.5rem;
      border: 1px solid rgba(241, 191, 109, 0.3);
      z-index: 20;
      transform-origin: top right;
      animation: dropdownSlide 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Invisible bridge to prevent closing on gap */
    .dropdown-content::after {
      content: "";
      position: absolute;
      top: -20px;
      left: 0;
      width: 100%;
      height: 20px;
      background: transparent;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }

    .dropdown-item {
      display: flex;
      align-items: center;
      padding: 12px;
      color: #fff;
      text-decoration: none;
      border-radius: 0.5rem;
      transition: all 0.2s ease;
      gap: 12px;
    }

    .dropdown-item:hover {
      background-color: var(--main-color);
      transform: translateX(5px);
    }

    .tool-icon {
      font-size: 1.5rem;
    }

    .tool-info {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .tool-name {
      font-weight: 600;
      color: var(--primary-color);
      font-size: 0.95rem;
    }

    .tool-desc {
      font-size: 0.75rem;
      color: #ccc;
    }

    /* Triangle pointer for dropdown */
    .dropdown-content::before {
      content: "";
      position: absolute;
      top: -6px;
      right: 20px;
      width: 12px;
      height: 12px;
      background-color: rgba(61, 63, 67, 0.95);
      transform: rotate(45deg);
      border-left: 1px solid var(--primary-color);
      border-top: 1px solid var(--primary-color);
      z-index: -1;
    }

    @keyframes dropdownSlide {
      from {
        opacity: 0;
        transform: translateY(-10px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }
  </style>
</html>
